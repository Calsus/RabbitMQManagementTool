<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet style.css?>

<Pane fx:id="rootPane" minHeight="550.0" minWidth="470.0" styleClass="rootPane" stylesheets="@style.css"
	  xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
	  fx:controller="be.telenet.yellowbelt.rmt.controllers.RabbitMQManagementToolController">

	<VBox prefHeight="524.0" prefWidth="450.0" spacing="5">
		<padding>
			<Insets left="10.0" top="10.0"/>
		</padding>
		<Label fx:id="headerLabel" styleClass="subtitle" text="Headers"/>
		<TableView fx:id="headerTable" editable="true">
			<columns>
				<TableColumn fx:id="keyColumn" text="Header key"/>
				<TableColumn fx:id="valueColumn" text="Header value"/>
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
			</columnResizePolicy>
		</TableView>
		<Label fx:id="contentLabel" styleClass="subtitle" text="Content"/>
		<TextArea fx:id="contentTextArea">

		</TextArea>
		<Label fx:id="queueLabel" styleClass="subtitle" text="Queues"/>
		<HBox spacing="5">
			<ComboBox fx:id="queueComboBox" prefHeight="25.0" prefWidth="349.0" onAction="#enableButton"/>
			<Button fx:id="sendButton" alignment="CENTER" disable="true" onAction="#send" prefHeight="25.0"
					prefWidth="98.0" text="Send">
				<HBox.margin>
					<Insets left="50.0"/>
				</HBox.margin>
			</Button>
		</HBox>
	</VBox>
</Pane>
