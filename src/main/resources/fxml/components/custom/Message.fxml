<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.112"
		 xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets left="10.0" top="10.0"/>
	</padding>
	<Label fx:id="messageLabel" styleClass="subtitle"/>
	<VBox fx:id="headersVBox">
		<Label styleClass="subsubtitle" text="Headers"/>
	</VBox>
	<Label styleClass="subsubtitle" text="Content"/>
	<TextArea fx:id="contentTextArea"/>
	<Label fx:id="messageRemainingLabel" styleClass="subsubtitle"/>
	<Separator/>
</fx:root>
